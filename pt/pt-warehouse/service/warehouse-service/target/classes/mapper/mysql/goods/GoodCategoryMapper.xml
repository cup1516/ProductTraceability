<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.warehouse.warehouse.dao.goods.GoodCategoryMapper">

    <resultMap type="com.warehouse.warehouse.pojo.po.goods.GoodCategory" id="GoodCategoryMap">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="companyId" column="company_id" jdbcType="VARCHAR"/>
    </resultMap>
    
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, parent_id, name    
    </sql>

    <!--查询单个-->
    <select id="describeById" parameterType="java.lang.Long" resultMap="GoodCategoryMap">
        select
        <include refid="Base_Column_List"/>
        from warehouse.good_category
        where id = #{id,jdbcType=INTEGER}
    </select>

    <!--查询指定行数据-->
    <select id="describeAllByLimit" resultMap="GoodCategoryMap">
        select
        <include refid="Base_Column_List"/>
        from warehouse.good_category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="describeAll" parameterType="com.warehouse.warehouse.pojo.po.goods.GoodCategory" resultMap="GoodCategoryMap">
        select
        <include refid="Base_Column_List"/>
        from warehouse.good_category
        <where>
            <if test="id != null">
                and id = #{id,jdbcType=INTEGER}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId,jdbcType=INTEGER}
            </if>
            <if test="name != null and name != ''">
                and name = #{name,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
    
    <!--通过实体作为筛选条件模糊查询-->
    <select id="describeFuzzy" parameterType="com.warehouse.warehouse.pojo.po.goods.GoodCategory" resultMap="GoodCategoryMap">
        select
        <include refid="Base_Column_List"/>
        from warehouse.good_category
        <where>
            <if test="id != null">
                and id like concat('%',#{id,jdbcType=INTEGER},'%')
            </if>
            <if test="parentId != null">
                and parent_id like concat('%',#{parentId,jdbcType=INTEGER},'%')
            </if>
            <if test="name != null and name != ''">
                and name like concat('%',#{name,jdbcType=VARCHAR},'%')
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertGoodCategory" parameterType="com.warehouse.warehouse.pojo.po.goods.GoodCategory">
        insert into warehouse.good_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="name != null and name != ''">
                name,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="parentId != null">
                #{parentId,jdbcType=INTEGER},
            </if>
            <if test="name != null and name != ''">
                #{name,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    
    <!--批量保存-->
    <insert id="saveGoodCategory" parameterType="java.util.ArrayList">
        insert into good_category(id, parent_id, name)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id,jdbcType=INTEGER}, #{item.parentId,jdbcType=INTEGER}, #{item.name,jdbcType=VARCHAR})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="updateGoodCategoryByPrimaryKey" parameterType="com.warehouse.warehouse.pojo.po.goods.GoodCategory">
        update warehouse.good_category
        <set>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteGoodCategoryByPrimaryKey" parameterType="java.lang.Long">
        delete from warehouse.good_category where id = #{id}
    </delete>
    
    <!--通过主键批量删除-->
    <delete id="deleteGoodCategoryByPrimaryKeys">
        delete from warehouse.good_category 
        where id in
        <foreach collection="list" item="item" open="(" separator="," close=")" >
            #{item}
        </foreach>
    </delete>


    <select id="describesGoodCategoryByGoodIdList" resultMap="GoodCategoryMap">
        select
        *
        from warehouse.good_category
        where parent_id in
        <foreach collection="goodIdList" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>