<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pt.ptuser.mapper.SysRoleMenuMapper">
  <resultMap id="BaseResultMap" type="com.pt.ptuser.entity.SysRoleMenu">
    <!--@mbg.generated-->
    <!--@Table dealer_role_menu-->
    <id column="role_id" jdbcType="VARCHAR" property="roleId" />
    <id column="menu_id" jdbcType="VARCHAR" property="menuId" />
    <id column="company_id" jdbcType="VARCHAR" property="companyId" />
  </resultMap>

  <!-- 通过用户ID，查询角色信息-->
  <select id="listRoleMenu" resultMap="BaseResultMap" >
    SELECT
    rm.*
    FROM system_role_menu rm
    WHERE rm.role_id = #{roleId} and rm.company_id = #{companyId}
  </select>

  <delete id="deleteRoleMenuByRoleId" >
    delete from system_role_menu
    where role_id=#{roleId} and company_id = #{companyId}
  </delete>

  <insert id="batchRoleMenu">
    insert into system_role_menu(role_id, menu_id,company_id) values
    <foreach item="item" index="index" collection="roleMenuList" separator=",">
      (#{item.roleId},#{item.menuId},#{companyId})
    </foreach>
  </insert>

  <select id="checkMenuExistRole" resultType="Integer">
    select count(1) from system_role_menu where menu_id = #{menuId}
  </select>
</mapper>