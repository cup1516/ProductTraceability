<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pt.ptuser.mapper.SysUserPostMapper">
  <resultMap id="BaseResultMap" type="com.pt.ptuser.entity.SysUserPost">
    <!--@mbg.generated-->
    <!--@Table dealer_user_post-->
    <id column="user_id" property="userId" />
    <id column="post_id" property="postId" />
  </resultMap>


  <delete id="deleteUserPostByUserId" >
    delete from system_user_post where user_id=#{userId} and company_id = #{companyId}
  </delete>

  <select id="countUserPostById" resultType="Integer">
    select count(1) from system_user_post where post_id=#{postId} and company_id = #{companyId}
  </select>

  <delete id="deleteUserPost" >
    delete from system_user_post where company_id = #{companyId} and user_id in
    <foreach collection="ids" item="userId" open="(" separator="," close=")">
      #{userId}
    </foreach>
  </delete>

  <insert id="batchUserPost">
    insert into system_user_post(user_id, post_id,company_id) values
    <foreach item="item" index="index" collection="userPostList" separator=",">
      (#{item.userId},#{item.postId},#{companyId})
    </foreach>
  </insert>
</mapper>